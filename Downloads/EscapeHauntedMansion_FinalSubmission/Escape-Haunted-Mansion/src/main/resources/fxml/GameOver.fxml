<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="game.GameOverController"
            prefWidth="600" prefHeight="400" styleClass="main-bg">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="You Escaped!" styleClass="title"/>
        <Button text="Play Again" onAction="#handleRestart"/>
        <Button text="Quit" onAction="#handleQuit"/>
    </VBox>
</AnchorPane>
