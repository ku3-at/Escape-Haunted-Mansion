<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="game.MainMenuController"
            prefWidth="600" prefHeight="400" styleClass="main-bg">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Escape the Haunted Mansion" styleClass="title"/>
        <Button text="Start Game" onAction="#handleStartGame" styleClass="menu-button"/>
        <Button text="Login/Register" onAction="#handleLogin" styleClass="menu-button"/>
        <Button text="Quit" onAction="#handleQuit" styleClass="menu-button"/>
    </VBox>
</AnchorPane>
